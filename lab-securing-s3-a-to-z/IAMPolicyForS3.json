{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::<BUCKET-NAME-HERE>",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "us-east-1"
        },
        "DateGreaterThan": {
          "aws:CurrentTime": "2020-06-18T00:00:00Z"
        },
        "IpAddress": {
          "aws:SourceIp": "x.x.x.x/32"
        },
        "DateLessThan": {
          "aws:CurrentTime": "2020-10-30T23:59:59Z"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::<BUCKET-NAME-HERE>/Engineering/${aws:username}/*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "us-east-1"
        },
        "DateGreaterThan": {
          "aws:CurrentTime": "2020-06-18T00:00:00Z"
        },
        "IpAddress": {
          "aws:SourceIp": "x.x.x.x/32"
        },
        "DateLessThan": {
          "aws:CurrentTime": "2020-10-30T23:59:59Z"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::<BUCKET-NAME-HERE>/Engineering/encrypted/*",
      "Condition": {
        "StringEquals": {
          "s3:x-amz-server-side-encryption": "AES256"
        },
        "IpAddress": {
          "aws:SourceIp": "x.x.x.x/32"
        }
      }
    }
  ]
}
